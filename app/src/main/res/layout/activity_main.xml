<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.grjug.android.chucknorrisjokes.ui.MainActivity"
    tools:ignore="MergeRootFrame">


    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hello_world"/>

    <TextView
        android:text="joke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joke"
        android:layout_below="@+id/hello_world"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refresh"
        android:id="@+id/btnRefresh"
        android:layout_below="@+id/joke"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_categories"
        android:id="@+id/btnCategoryList"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_settings"
        android:id="@+id/btnSettings"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnCategoryList"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_save_joke"
        android:id="@+id/btnSaveJoke"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnSettings"/>

</RelativeLayout>



